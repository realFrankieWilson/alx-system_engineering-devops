#!/usr/bin/env bash
# Configuration of the 404 error page.

sudo apt-get -y update
sudo apt-get install -y nginx

# Redirects a specific endpoint (eg: redirect_me to https://youtupe.com)
echo "Hello World!" | sudo tee /var/www/html/index.html

#variable that stores the string
string_repl="server_name _;\n\trewrite ^\/redirect_me https:\/\/www.youtube.com/watch?v=QH2-TGUlwu4 permanent;"
sudo sed -i "s/server_name _;/$string_repl/" /etc/nginx/sites-enabled/default

# A configured Nginx server to have a custom 404 page with a text "Ceci n'est pas une page"
echo "Ceci n'est pas une page" | sudo tee /var/www/html/404.html
string_repl="listen 80 default_server;\n\terror_page 404 \/404.html;\n\tlocation = \/404.html {\n\t\troot \/var\/www\/html;\n\t\tinternal;\n\t}"
sudo sed -i "s/listen 80 default_server;/$string_repl/" /etc/nginx/sites-enabled/default

# Restart nginx server
sudo service nginx restart
